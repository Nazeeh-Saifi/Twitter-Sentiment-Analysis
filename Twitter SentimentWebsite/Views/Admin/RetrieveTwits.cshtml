@using TwitterSentimentService;
@{
    ViewBag.Title = "RetrieveTwits";

}

<style>
    table, td, th {
        border: 1px solid black;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }
</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Content/css/adduser.css" />
    <link rel="stylesheet" href="~/Content/css/site.css" />

</head>
<body>
    <p class="note">
        <i class="fa fa-lightbulb-o" style="font-size:28px;color:yellow"></i>
        Note: Make Sure to Submit the Right Information.
    </p>
    <form name="retrieve" action="Verify_retrievetwits" method="post">
        <div class="input-group">

            <input type="number" min="0" name="user_id" placeholder="User ID" required="">
        </div>
        <button class="btn btn-danger btn-block" name="submit" type="submit">Retrieve Twits by User ID</button>

    </form>
    @{
        if(ViewBag.check == false)
        {
            <br />
        }
        else
        {
            if (ViewBag.twit.Count == 0)
            {
                <br /><div class="w3-panel w3-pale-yellow w3-border">
                    <h3>Warning!</h3>
                    <p>No user found with this id OR The user don't have any twits yet!!! Please Try Again.</p>
                    <br />
                </div>
            }

            else
            {
                <br />
                <table>
                    <tr style="background-color: gainsboro;">
                        <th>Twit id</th>
                        <th>Twit Text</th>
                        <th>Twit Sentiement</th>
                        <th>Date of deploy</th>
                        <th>Case ID</th>
                    </tr>

                    @{ foreach (Twits twit in ViewBag.twit)
                        {
                                        <tr>
                                            <th>@twit.twit_id</th>
                                            <th>@twit.text</th>
                                            <th>@twit.sentiment</th>
                                            <th>@twit.date</th>
                                            <th>@twit.case_id</th>
                                        </tr>
                                }
                                }
                            
                        </table>
            }
        }
}
    <br />

</body>
</html>

